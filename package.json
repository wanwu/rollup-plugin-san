{
  "name": "rollup-plugin-san",
  "version": "2.0.0",
  "description": "A rollup plugin supports `.san` file.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist/",
    "dev": "npm run clean && tsc -w",
    "build": "npm run lint && npm run clean && tsc",
    "lint": "prettier --write \"{src,test}/**/*.{ts,js}\"",
    "prepublishOnly": "npm run test && npm run build",
    "test": "jest test/*"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wanwu/rollup-plugin-san.git"
  },
  "keywords": [
    "san",
    "sfc",
    "rollup"
  ],
  "author": "Baidu.Inc",
  "maintainers": [
    "wangjinghao@baidu.com"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wanwu/rollup-plugin-san/issues"
  },
  "homepage": "https://github.com/wanwu/rollup-plugin-san#readme",
  "dependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@types/hash-sum": "^1.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "hash-sum": "^2.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.7",
    "prettier": "^2.4.1",
    "qs": "^6.10.1",
    "rollup": "^2.59.0",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-pluginutils": "^2.8.2",
    "san": "^3.10.10",
    "san-sfc-compiler": "^0.1.4",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts",
      "san"
    ],
    "transform": {
      "^.+\\.(ts|js)$": "<rootDir>/node_modules/ts-jest"
    },
    "globals": {
      "ts-jest": {
        "packageJson": "<rootDir>/package.json"
      },
      "__DEV__": false
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@types/qs": "^6.9.7"
  }
}
